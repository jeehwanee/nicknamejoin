<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.vampa.mapper.MemberMapper">
  
 <!-- 회원가입 관련 쿼리 -->
	<insert id="memberJoin">
		insert into book_member values(#{memberId}, #{memberNick}, #{memberPw}, #{memberName}, #{memberMail}, #{memberAddr1}, #{memberAddr2}, #{memberAddr3}, 0, now())
	</insert>
  	<!-- 아이디 중복검사 -->
  	<select id="idCheck" resultType="int">
  		select count(*) from book_member where memberId = #{memberId}
  	</select>
  	
  	<!-- 닉네임 중복검사 -->
  	<select id="nickCheck" resultType="int">
  		select count(*) from book_member where memberNick = #{memberNick}
  	</select>
  	
  	
  	<!-- 이메일 중복검사 -->
  	<select id="mailCheck" resultType="int">
  		select count(*) from book_member where memberMail = #{memberMail}
  	</select>
  	
  	
<!-- 로그인 관련 쿼리 안 돼서 주석 처리 해둠-->
  	<!-- 로그인 -->
  	<!-- 주석 시작
  	<select id="memberLogin" resultType="com.vampa.model.MemberVO">
  		select memberId, memberName, adminCk, money, point from book_member where memberId = #{memberId} and memberPw = #{memberPw}
  	</select>
  	주석 끝 -->
  </mapper>